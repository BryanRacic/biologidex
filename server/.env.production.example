# Production Environment Configuration
# Copy this file to .env.production and fill in your values

# Django Settings
SECRET_KEY=your-production-secret-key-here
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,biologidex.example.com
DJANGO_SETTINGS_MODULE=biologidex.settings.production_local

# Database Configuration
DB_NAME=biologidex
DB_USER=biologidex
DB_PASSWORD=secure-database-password
DB_HOST=db  # Use 'db' for Docker, 'localhost' for local
DB_PORT=5432

# Redis Configuration
REDIS_HOST=redis  # Use 'redis' for Docker, 'localhost' for local
REDIS_PORT=6379
REDIS_PASSWORD=secure-redis-password
CELERY_BROKER_URL=redis://:secure-redis-password@redis:6379/0
CELERY_RESULT_BACKEND=redis://:secure-redis-password@redis:6379/0

# Google Cloud Storage (optional for local, required for GCP)
GCS_BUCKET_NAME=biologidex-media
GCS_PROJECT_ID=your-gcp-project-id
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json

# OpenAI API Configuration
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4o

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://biologidex.example.com

# JWT Configuration
JWT_ACCESS_TOKEN_LIFETIME_MINUTES=60
JWT_REFRESH_TOKEN_LIFETIME_DAYS=7

# Rate Limiting
THROTTLE_ANON_RATE=100/hour
THROTTLE_USER_RATE=1000/hour
THROTTLE_UPLOAD_RATE=20/hour

# File Upload
MAX_UPLOAD_SIZE_MB=10

# Cache TTL Settings
GRAPH_CACHE_TTL=120
ANIMAL_CACHE_TTL=3600

# Email Configuration (for production)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Sentry Error Tracking (optional)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Monitoring
PROMETHEUS_METRICS_ENABLED=True
HEALTH_CHECK_ENABLED=True

# Cloudflare Tunnel (for local production)
CLOUDFLARE_TUNNEL_ID=your-tunnel-id
CLOUDFLARE_TUNNEL_TOKEN=your-tunnel-token

# Worker Configuration
CELERY_WORKERS=4
GUNICORN_WORKERS=4

# Logging
LOG_LEVEL=INFO
LOG_FILE=/app/logs/biologidex.log

# Feature Flags
AUTO_SEED_TEST_USERS=False
ENABLE_DEBUG_TOOLBAR=False
ENABLE_SILK_PROFILING=False