# Django Settings
SECRET_KEY=your_secret_key_here_change_in_production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1
DJANGO_SETTINGS_MODULE=biologidex.settings.development

# Database Configuration
DB_NAME=biologidex
DB_USER=postgres
DB_PASSWORD=your_secure_password_here
DB_HOST=localhost
DB_PORT=5432

# Redis & Celery
REDIS_HOST=localhost
REDIS_PORT=6379
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Google Cloud Storage
GCS_BUCKET_NAME=biologidex-media
GCS_PROJECT_ID=your-gcp-project-id
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json

# OpenAI API
OPENAI_API_KEY=your_openai_api_key_here

# CORS Settings (comma-separated origins for production)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# JWT Settings
JWT_ACCESS_TOKEN_LIFETIME_MINUTES=60
JWT_REFRESH_TOKEN_LIFETIME_DAYS=7

# Rate Limiting
THROTTLE_ANON_RATE=100/hour
THROTTLE_USER_RATE=1000/hour
THROTTLE_UPLOAD_RATE=20/hour

# File Upload Limits
MAX_UPLOAD_SIZE_MB=10

# Cache TTL (seconds)
GRAPH_CACHE_TTL=120
ANIMAL_CACHE_TTL=3600
